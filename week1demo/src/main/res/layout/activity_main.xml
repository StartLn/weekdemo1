<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--主页面，-->
    <!--导入自定义的ViewPage-->
    <FrameLayout
        android:id="@+id/ragement"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_81"
        android:background="@mipmap/rectangle6"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/page_first"
            android:layout_width="@dimen/dp_26"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_32"
            android:checked="true"
            android:background="@drawable/firstbackage"
            android:button="@null" />
        <RadioButton
            android:id="@+id/page_circle"
            android:layout_width="@dimen/dp_26"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="@dimen/dp_26"
            android:layout_marginRight="@dimen/dp_32"
            android:background="@drawable/circlebackage"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/page_shopping_cart"
            android:layout_width="@dimen/dp_55"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_55"
            android:layout_marginRight="@dimen/dp_32"
            android:background="@mipmap/commom_tab_btn_shopping_cart_n"
            android:button="@null" />
        <RadioButton
            android:id="@+id/page_order_form"
            android:layout_width="@dimen/dp_26"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="@dimen/dp_26"
            android:layout_marginRight="@dimen/dp_32"
            android:background="@drawable/orderbackage"
            android:button="@null" />
        <RadioButton
            android:id="@+id/page_personage"
            android:layout_width="@dimen/dp_26"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="@dimen/dp_26"
            android:layout_marginRight="@dimen/dp_32"
            android:background="@drawable/personagebackage"
            android:button="@null" />
    </RadioGroup>
</RelativeLayout>